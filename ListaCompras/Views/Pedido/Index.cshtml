@model IEnumerable<ListaCompras.Repositório.Pedido>

@{
    ViewBag.Title = "Pedidos";
}

<h2>Pedidos</h2>

<p>
    @Html.ActionLink("Novo Pedido", "CriarPedido", "Pedido")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ds_Pedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ds_Pedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Email)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Pedido }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id_Pedido })
            </td>
        </tr>
    }

</table>
